{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "outDir": "lib",
    "rootDir": "src",
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["./src/"],
  "exclude": [
    "./node_modules"
  ]
}
